.main.container
	.row
		.col-md-6.offset-md-3.block
			h1.title Log In
			h4.sub-title Enter your credential, or register now!
			form(method='POST' action='/login')
				div.form-group
					label(for='email') Email
					input.form-control(type='email' id='email' placeholder='email' name='email' required)
				div.form-group
					label(for='password') Password
					input.form-control(type='password' id='password' placeholder='password' name='password' required)
				.row.button
					.col-md-6
						button.btn.btn-primary(type='submit') Log in
					.col-md-6
						a.btn.btn-primary(href="/#!/register") Register

