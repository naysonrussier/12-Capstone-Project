doctype html
html(ng-app="app")
	head
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title= title
		link(rel='stylesheet', href='/vendor/bootstrap/css/bootstrap.min.css')
		// Custom css files
		link(rel='stylesheet', href='/css/normalize.css')
		link(rel='stylesheet', href='/css/style.css')
	body(ng-controller="services")
		include partials/_h_nav
		.page.error
			.container
				.row.block
					.col-md-7.offset-md-2
						h1.title Error
						h3.sub-title #{message} - #{error.status}
		include partials/_h_footer
		script(src="vendor/jquery/jquery.min.js")
		script(src="vendor/tether/tether.min.js")
		script(src="vendor/bootstrap/js/bootstrap.min.js")
		script(src="vendor/angular/angular.min.js")
		script(src="vendor/angular/angular-route.min.js")
			
		script(src="js/app.js")
		script(src="js/controllers/services.js")
		script(src="js/services/DB.js")